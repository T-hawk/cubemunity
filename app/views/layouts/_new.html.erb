<%= form_for(params[:type].downcase.to_sym, url: { controller: "#{params[:type].downcase}s", action: "new" }) do |f| %>
  <% if params[:type] != "Comment" %>
    <%= f.label :title %>
    <%= f.text_field :title %>
  <% else %>
    <%= hidden_field_tag :post_id, params[:post_id] %>
  <% end %>
  <br>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <br>
  <%= f.submit "Make #{params[:type]}" %>
<% end %>